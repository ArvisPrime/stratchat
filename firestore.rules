rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated and matches the user ID
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // User Profiles & Subcollections (Sessions, Usage Stats)
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Sessions Subcollection
      match /sessions/{sessionId} {
        allow read, write: if isOwner(userId);
      }

      // Usage Stats Subcollection
      match /usage_stats/{date} {
        allow read, write: if isOwner(userId);
      }
    }

    // Deny access to everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
